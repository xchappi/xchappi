---
const projects = [
	{
		title: "Dungeon Crawler",
		description: "2D dungeon game with pixel graphics",
		link: "#"
	},
	{
		title: "RPG Inventory System",
		description: "Inventory management for RPG games",
		link: "#"
	},
	{
		title: "Pixel Art Creator",
		description: "Web-based pixel art creation tool",
		link: "#"
	}
];
---

<section id="quests" class="content-section">
	<h2 class="section-title">Completed Quests</h2>
	<ul class="quest-list">
		{projects.map(project => (
			<li class="quest-item">
				<h3>{project.title}</h3>
				<p>{project.description}</p>
				<a href={project.link} class="quest-link">View Quest</a>
			</li>
		))}
	</ul>
</section>

<style>
	.quest-list {
		list-style-type: none;
		padding: 0;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 20px;
	}
	.quest-item {
		background-color: var(--secondary-bg);
		padding: 15px;
		border: 1px solid var(--accent-color);
	}
	.quest-item h3 {
		font-size: 0.9em;
		color: var(--accent-color);
		margin-bottom: 10px;
	}
	.quest-item p {
		font-size: 0.7em;
		margin: 5px 0;
	}
	.quest-link {
		font-size: 0.7em;
		color: var(--text-color);
		text-decoration: none;
		display: inline-block;
		margin-top: 10px;
		padding: 5px 10px;
		border: 1px solid var(--accent-color);
	}
	.quest-link:hover {
		background-color: var(--accent-color);
		color: var(--main-bg);
	}
</style>